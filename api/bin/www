#!/usr/bin/env node

/**
 * Module dependencies.
 */
const dotenv = require("dotenv");
const mongoose = require("mongoose");
dotenv.config({ path: "./config.env" });

const app = require("../app");

/**
 * Get port from environment and store
 * If no PORT defined, use 5000.
 */

const PORT = process.env.PORT || 5000;

/**
 * Mongoose connection and start the server
 * We only run our server if the connection with Database is succefull.
 */
mongoose
  .connect(process.env.DATABASE_LOCALHOST, {
    useNewUrlParser: true,
    useCreateIndex: true,
    useUnifiedTopology: true,
    useFindAndModify: false,
  })
  .then(() => {
    console.log("Database Connected...");
    app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
  })
  .catch((err) => console.log(err.message));